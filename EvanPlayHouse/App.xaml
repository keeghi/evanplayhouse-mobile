<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EvanPlayHouse.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--            Color-->
            <Color x:Key="GrayBackgroundColor">#FAFAFA</Color>
            <Color x:Key="BlackTextColor">#000000</Color>
            <!--            Style-->
            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="TextColor" Value="{StaticResource BlackTextColor}"/>
            </Style>
            <Style x:Key="SubtitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="TextColor" Value="{StaticResource BlackTextColor}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>